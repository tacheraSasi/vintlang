const os = import("os")

// Test file info functions
let homeInfo = os.stat(os.userHomeDir())
println("Home directory info:", homeInfo)

// Test environment manipulation
os.setEnv("VINT_TEST", "hello")
let testVar = os.getEnv("VINT_TEST")
println("Test env var:", testVar)

// Test groups
let groups = os.getgroups()
println("User groups:", groups)

// Test executable
let execPath = os.executable()
println("Executable path:", execPath)

println("Advanced OS functions working!")